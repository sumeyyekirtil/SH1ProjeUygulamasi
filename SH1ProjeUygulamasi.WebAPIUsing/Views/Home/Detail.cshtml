@{
    ViewData["Title"] = "Ürün Detay Sayfası";
}

<div class="row">
    <div class="col-md-8">
        <div id="images" class="row row-cols-2"></div>
        <div id="detail" class="col-md-4"></div>
    </div>
</div>

@section scripts{
    <script>
        let images = document.getElementById('images');
        let div = document.getElementById('detail');
        fetch('https://dummyjson.com/products/'  + @Context.GetRouteValue("id"))
            .then(response => response.json())
            .then(product => {
                 console.log(product);
                 const resimler = product.images;
                 for (const resim in resimler) {
                     images.innerHTML += `<div class= "col" <a href= "${resimler[resim]}"><img src="${resimler[resim]}" alt="" class= "img-fluid" /></a></div>`
                 }
                 div.innerHTML = `
                 <div class= "col-md-12">
                      <h1>"${resimler.title}"</h1>
                      <h2>"${resimler.category}"</h2>
                      <h4> Fiyat :"${resimler.price} ₺"</h4>
                      <div>
                           ${product.description}
                      </div>
                 </div>
                 
                 `
            })
    </script>
}
